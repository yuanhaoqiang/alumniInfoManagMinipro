<view class="information">
    <view class="page__hd">
    </view>
    <view class="page__bd">
        <form bindsubmit="formSubmit" bindreset="formReset">
            <view class="section">
                <view class="name-text">姓名</view>
                <input type="text" placeholder="请输入您的姓名"   bindinput="nameinput" />
            </view>
            <view class="section">
                <view class="name-text">学号</view>
                <input type="number" placeholder="请输入您的学号"   bindinput="numberinput" />
            </view>
            <view class="section">
                <view class="name-text">邮箱</view>
                <input type="text" placeholder="请输入您的邮箱" bindinput="emailinput" />
            </view>
            <view class="section">
                <view class="name-text">电话</view>
                <input type="number" placeholder="请输入您的电话号码"   bindinput="telinput" />
            </view>
            <view class="section">
                <view class="name-text">工作</view>
                <input type="text" placeholder="请输入您的工作" bindinput="jobinput" />
            </view>
            <view class="section">
                <view class="name-text">公司</view>
                <input type="text" placeholder="请输入您的公司" bindinput="companyinput" />
            </view>
            
            
            <view class="btn-area">
                <view class="button-wrapper">
                    <button type="primary" formType="submit" class="primary" catchtap="insertinformation">新建</button>
                </view>
                <view class="button-wrapper">
                    <button type="primary" formType="submit" class="primary" catchtap="fixinformation">修改</button>
                </view>
                <view class="button-wrapper">
                    <button type="default" formType="submit" catchtap="back">返回</button>
                </view>
            </view>
        </form>
    </view>
</view>

